<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Vistas.PantallaPrincipalActivity">

    <ImageView
        android:id="@+id/imgprincipal"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@mipmap/ic_imgprincipal"
        >
    </ImageView>

    <TextView
        android:id="@+id/utexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="CREAR NUEVO USUARIO"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:text="Usuario"
        android:textSize="20dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-35dp"
        android:ems="10"
        android:inputType="text"
        android:text="USUARIO_LOGUADO" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:text="Password"
        android:textSize="20dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="-36dp"
        android:ems="10"
        android:inputType="textPassword" />



    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:text="Repetir Usuario"
        android:textSize="20dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-40dp"
        android:inputType="text"
        android:text="USUARIO_LOGUADO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        >


        <Button
            android:id="@+id/btnCrear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-80dp"
            android:text="Crear" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="-50dp"
            android:text="Cancelar"
            />


    </LinearLayout>


</LinearLayout>